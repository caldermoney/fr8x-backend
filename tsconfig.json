{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,                       // ðŸ”§ required for allowImportingTsExtensions
    "allowImportingTsExtensions": true,   // lets us import "./file.ts"
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "script/**/*.ts"
, "update-index.ts"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
