{
  "name": "fr8x-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node --enable-source-maps dist/index.js",
    "update:index": "tsx scripts/update-index.ts",
    "update:index:force": "tsx scripts/update-index.ts force=true",
    "update:index:manual": "tsx scripts/update-index.ts value=2100 force=true",
    "smoke": "curl -s http://localhost:3001/health && echo && curl -s http://localhost:3001/index && echo && curl -s http://localhost:3001/index.csv && echo && curl -s \"http://localhost:3001/history?limit=5\""
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "ethers": "^6.15.0",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.18.6",
    "tsx": "^4.19.1",
    "typescript": "^5.9.2"
  }
}
